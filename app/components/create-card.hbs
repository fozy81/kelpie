{{#if this.show}}

<div class="m-2 p-2
            shadow-md border-gray-400
            bg-gray-200">

Title 
<Input class="shadow-md border-2 border-gray-400" 
@placeholder="Name"
{{did-insert this.focus}}
@modelName = {{@modelname}}
@value={{this.newName}}
@insert-newline={{fn this.createCard}} />
 <button class="p-2 font-bold"
      {{on "click" this.showCard}}>X</button>

{{#if @list}}

 {{#each @list as |item|}}

     <div>
       <button 
        {{on "click" (fn this.addFormTemplate item.id)}}>
        {{item.title}}
        </button>
     </div>
{{/each}}
{{ else }}
  
{{/if}}

</div>

{{else}}

<div class="m-2 p-2
            shadow-md border-gray-400
            bg-gray-200">
  <button class="w-full text-left"
          {{on "click" this.showCard}} 
  > 
   {{@label}}
  </button>
</div>
{{/if}}

{{yield}}